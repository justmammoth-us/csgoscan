<div class="card">
  <div class="card-content">
    <div class="columns is-vcentered">
      <div class="column is-2 has-text-centered">
        <p class="subtitle">{{ player.faceit.ctx.name }}</p>
      </div>
      <div class="column">
        <nav class="level">
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Name</p>
              <p class="title">{{ player.faceit.id }}</p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Level</p>
              <p class="title">{{ player.faceit.level }}</p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Elo</p>
              <p class="title">{{ player.faceit.elo }}</p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Games played</p>
              <p class="title">{{ player.faceit.games_played }}</p>
            </div>
          </div>
        </nav>
      </div>
      <div class="column is-narrow">
        <a class="button" href="{{ player.faceit.link }}" target="_blank">
          <span class="icon">
            <i class="fas fa-arrow-up-right-from-square"></i>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>